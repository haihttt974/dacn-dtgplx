@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject dacn_dtgplx.Models.DtGplxContext _context
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    var avatar = _context.Users
        .Where(u => u.Username == username)
        .Select(u => u.Avatar)
        .FirstOrDefault() ?? "/images/avatar/default.png";

    if (!string.IsNullOrEmpty(avatar) && avatar.Contains("wwwroot"))
    {
        avatar = avatar.Replace("wwwroot", "");
    }

    if (!avatar.StartsWith("/"))
    {
        avatar = "/" + avatar;
    }

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Quản trị DT GPLX</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <!-- AdminLTE (nếu dùng bản nhẹ, chỉ giữ style chính) -->
    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Roboto, sans-serif;
            background-color: #f4f6f9;
        }

        .brand-link {
            font-weight: 700;
            letter-spacing: 0.3px;
        }

        .main-footer {
            background: #fff;
            border-top: 1px solid #dee2e6;
            font-size: 0.9rem;
        }

        .sidebar .nav-item .nav-link.active {
            background-color: #007bff;
            color: #fff;
            font-weight: 600;
        }

        .sidebar .nav-link i {
            width: 20px;
        }

        .content-wrapper {
            background: #f8f9fa;
        }

        .navbar-nav.ms-auto {
            align-items: center; /* Căn giữa dọc cả nhóm bên phải */
        }

        .navbar-online-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.25rem 0.75rem;
            border-radius: 999px; /* pill */
            font-size: 0.8rem;
            font-weight: 600;
        }

        .nav-treeview .nav-link .nav-icon {
            width: 20px; /* đảm bảo icon thẳng hàng */
            text-align: center;
        }

        .sidebar .nav-item .right {
            margin-left: 12px !important;
        }

        body {
            font-family: 'Segoe UI', Roboto, sans-serif;
        }

    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light shadow-sm">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="AdminDashboard" asp-action="Index" class="nav-link fw-semibold text-primary">
                        Bảng điều khiển
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="AdminUsers" asp-action="Index" class="nav-link fw-semibold text-primary">
                        Người dùng
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="AdminPayments" asp-action="Index" class="nav-link fw-semibold text-primary">
                        Hóa đơn thanh toán
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto">
                <!-- SEARCH -->
                <li class="nav-item me-3">
                    <div class="position-relative">
                        <input type="search"
                               id="adminFeatureSearch"
                               class="form-control form-control-sm rounded-pill"
                               placeholder="Tìm chức năng..."
                               autocomplete="off"
                               style="width:220px; padding-right:36px;" />

                        <i class="fa fa-search position-absolute text-muted"
                           style="right:12px; top:50%; transform:translateY(-50%); font-size:0.85rem;"></i>

                        <div id="adminSearchResult"
                             class="position-absolute bg-white shadow rounded-3 d-none"
                             style="top:110%; width:100%; z-index:1050;">
                        </div>
                    </div>
                </li>
                <!-- Badge online -->
                <li class="nav-item me-3 d-flex align-items-center">
                    <span class="badge bg-success navbar-online-badge">
                        <i class="fa fa-circle me-1"></i>
                        Số user online: <span id="onlineCount" class="ms-1">0</span>
                    </span>
                </li>

                <!-- User dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle fw-semibold d-flex align-items-center"
                       data-bs-toggle="dropdown" href="#" role="button">
                        <i class="fa fa-user-circle me-1 text-primary fs-5"></i>
                        @HttpContextAccessor.HttpContext?.Session.GetString("Username")
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="AdminProfile" asp-action="Index"><i class="fa fa-id-card me-2 text-primary"></i> Hồ sơ cá nhân</a></li>
                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="fa fa-right-from-bracket me-2 text-danger"></i> Đăng xuất</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-controller="AdminDashboard" asp-action="Index" class="brand-link text-center">
                <img src="~/images/Logo/logo.jpg" alt="Logo" class="brand-image img-circle elevation-2" style="opacity: .8" />
                <span class="brand-text fw-bold">DT GPLX</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex align-items-center">
                    <div class="image">
                        <img src="@avatar" class="img-circle elevation-2" alt="User Avatar" />
                    </div>
                    <div class="info">
                        <a href="#" class="d-block fw-semibold text-white">
                            @HttpContextAccessor.HttpContext?.Session.GetString("Username")
                        </a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview">

                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a asp-controller="AdminDashboard"
                               asp-action="Index"
                               class="nav-link @(currentController == "AdminDashboard" ? "active" : "")">
                                <i class="nav-icon fa fa-gauge-high"></i>
                                <p>Bảng điều khiển</p>
                            </a>
                        </li>

                        <!-- Khóa học -->
                        <li class="nav-item">
                            <a asp-controller="AdminCourses"
                               asp-action="Index"
                               class="nav-link @(currentController == "AdminCourses" ? "active" : "")">
                                <i class="nav-icon fa fa-book"></i>
                                <p>Khóa học</p>
                            </a>
                        </li>

                        <!-- Quản lý lịch dạy -->
                        <li class="nav-item">
                            <a asp-controller="LichDayGv"
                               asp-action="Index"
                               class="nav-link @(currentController == "LichDayGv" ? "active" : "")">
                                <i class="nav-icon fa fa-calendar"></i>
                                <p>Quản lý lịch dạy</p>
                            </a>
                        </li>

                        <!-- Thi thử lý thuyết -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fa fa-clipboard-question"></i>
                                <p>
                                    Thi thử lý thuyết
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview ms-3">
                                <li class="nav-item">
                                    <a asp-controller="AdminTheoryQuestions" asp-action="Index" class="nav-link">
                                        <i class="fa fa-question-circle nav-icon"></i>
                                        Câu hỏi & Đáp án
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="AdminExamSets" asp-action="Index" class="nav-link">
                                        <i class="fa fa-layer-group nav-icon"></i>
                                        Bộ đề trắc nghiệm
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="AdminResults" asp-action="Index" class="nav-link">
                                        <i class="fa fa-clipboard-check nav-icon"></i>
                                        Bài làm trắc nghiệm
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Mô phỏng -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fa fa-film"></i>
                                <p>
                                    Thi mô phỏng
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview ms-3">
                                <li class="nav-item">
                                    <a asp-controller="AdminSimulationQuestions" asp-action="Index" class="nav-link">
                                        <i class="fa fa-question-circle nav-icon"></i> Câu hỏi mô phỏng
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="AdminSimulationExamSets" asp-action="Index" class="nav-link">
                                        <i class="fa fa-layer-group nav-icon"></i> Bộ đề mô phỏng
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="AdminSimulationResults" asp-action="Index" class="nav-link">
                                        <i class="fa fa-clipboard-check nav-icon"></i> Bài làm mô phỏng
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Biển báo & Flashcard -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fa fa-traffic-light"></i>
                                <p>
                                    Biển báo & Flashcard
                                    <i class="fas fa-angle-left right ms-3"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview ms-3">

                                <li class="nav-item">
                                    <a asp-controller="AdminSigns" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-road"></i>
                                        <p class="ms-2">Quản lý biển báo</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="AdminFlashCards" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-clone"></i>
                                        <p class="ms-2">Quản lý Flashcard</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Quản lý xe -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="fa fa-car nav-icon"></i>
                                <p>
                                    Xe tập lái
                                    <i class="fas fa-angle-left right ms-3"></i>
                                </p>
                            </a>

                            <ul class="nav nav-treeview ms-3">

                                <li class="nav-item">
                                    <a asp-controller="AdminVehicles" asp-action="Index" class="nav-link">
                                        <i class="fa fa-list nav-icon"></i>
                                        <p class="ms-2">Danh sách xe</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="AdminVehicles" asp-action="Scan" class="nav-link">
                                        <i class="fa fa-barcode nav-icon"></i>
                                        <p class="ms-2">Scan phiếu thuê xe</p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <!-- Quản lý Hồ sơ -->
                        <li class="nav-item">
                            <a asp-controller="AdminProfiles" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa fa-id-card"></i>
                                <p>Hồ sơ học viên</p>
                            </a>
                        </li>

                        <!-- Thông báo -->
                        <li class="nav-item">
                            <a asp-controller="AdminNotifications" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa fa-bell"></i>
                                <p>Thông báo</p>
                            </a>
                        </li>

                        <!-- Phản hồi -->
                        <li class="nav-item">
                            <a asp-controller="AdminFeedbacks" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa fa-comments"></i>
                                <p>Phản hồi</p>
                            </a>
                        </li>

                        <!-- Báo cáo thống kê -->
                        <li class="nav-item">
                            <a asp-controller="AdminReport" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa fa-chart-bar"></i>
                                <p>Báo cáo thống kê</p>
                            </a>
                        </li>

                        <!-- Đăng xuất -->
                        <li class="nav-item mt-3">
                            <a asp-controller="Auth" asp-action="Logout" class="nav-link text-danger fw-bold">
                                <i class="nav-icon fa fa-right-from-bracket"></i>
                                <p>Đăng xuất</p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid py-2">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h4 class="m-0 fw-bold text-primary">@ViewData["Title"]</h4>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li class="breadcrumb-item"><a asp-controller="AdminDashboard" asp-action="Index">Trang chủ</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        
        <!-- Footer -->
        <footer class="main-footer text-center">
            <strong>© @DateTime.Now.Year DT GPLX.</strong> Hệ thống quản lý đào tạo lái xe — ASP.NET Core MVC.
        </footer>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/onlineHub", {
                withCredentials: true   // <<<< RẤT QUAN TRỌNG
            })
            .configureLogging(signalR.LogLevel.Information)
            .build();

        // Nhận số lượng user online
        connection.on("ReceiveOnlineCount", function (count) {
            const el = document.getElementById("onlineCount");
            if (el) el.innerText = count;
        });

        connection.start()
            .then(() => console.log("SignalR connected"))
            .catch(err => console.error("SignalR error:", err));

            // Hàm gọi API lấy số user online và cập nhật badge
        function refreshOnlineCount() {
            fetch('/online/count', {
                method: 'GET',
                cache: 'no-cache'
            })
            .then(r => r.ok ? r.json() : null)
            .then(data => {
                if (!data) return;
                const el = document.getElementById('onlineCount');
                if (el) {
                    el.textContent = data.count;
                }
            })
            .catch(err => console.warn('Lỗi load online count:', err));
        }

        // Gọi 1 lần khi load trang
        refreshOnlineCount();

        // Sau đó 5s cập nhật lại 1 lần
        setInterval(refreshOnlineCount, 5000);

        setInterval(() => {
            fetch("/online/ping", {
                method: "GET",
                cache: "no-cache"
            });
        }, 5000);

        // ========================= ADMIN FEATURE SEARCH =========================
        const adminInput = document.getElementById("adminFeatureSearch");
        const adminBox = document.getElementById("adminSearchResult");

        if (adminInput && adminBox) {
            adminInput.addEventListener("input", async () => {
                const q = adminInput.value.trim();

                if (q.length < 2) {
                    adminBox.classList.add("d-none");
                    adminBox.innerHTML = "";
                    return;
                }

                const res = await fetch(`/search/features?q=${encodeURIComponent(q)}`, { cache: "no-cache" });
                const data = await res.json();

                if (!Array.isArray(data) || data.length === 0) {
                    adminBox.innerHTML = `<div class="p-3 text-muted">Không tìm thấy chức năng</div>`;
                    adminBox.classList.remove("d-none");
                    return;
                }

                const regex = new RegExp(`(${q})`, "gi");

                adminBox.innerHTML = data.map(f => `
                    <a href="${f.url}"
                       class="d-block px-3 py-2 text-decoration-none text-dark border-bottom">
                        <div class="fw-semibold">
                            ${(f.title || "").replace(regex, `<mark>$1</mark>`)}
                        </div>
                        <div class="small text-muted">
                            ${(f.description || "").replace(regex, `<mark>$1</mark>`)}
                        </div>
                    </a>
                `).join("");

                adminBox.classList.remove("d-none");
            });

            // Click ngoài để đóng dropdown
            document.addEventListener("click", (e) => {
                const isInside = adminInput.contains(e.target) || adminBox.contains(e.target);
                if (!isInside) {
                    adminBox.classList.add("d-none");
                }
            });

            // ESC để đóng
            adminInput.addEventListener("keydown", (e) => {
                if (e.key === "Escape") {
                    adminBox.classList.add("d-none");
                    adminBox.innerHTML = "";
                    adminInput.blur();
                }
            });
        }

    </script>

    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("_Toast")
</body>
</html>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DT GPLX</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            padding-top: 70px;
        }

        .navbar-brand img {
            height: 32px;
        }

        .nav-link.active {
            font-weight: 600;
        }

        footer {
            background-color: #f8f9fa;
        }

            footer .social a {
                color: #0d6efd;
                margin-right: 10px;
                font-size: 18px;
                transition: 0.3s;
            }

                footer .social a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center fw-bold" asp-controller="Home" asp-action="Index">
                <img src="~/images/Logo/logo.jpg" alt="Logo" class="me-2" />
                DT GPLX
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house me-1"></i>Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                </ul>

                <!-- SEARCH -->
                <form class="d-flex me-3" asp-controller="Home" asp-action="Search" method="get">
                    <input class="form-control form-control-sm rounded-pill" type="search" name="q" placeholder="Tìm kiếm..." />
                    <button class="btn btn-light btn-sm rounded-circle ms-2" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>

                <!-- AUTH BUTTONS -->
                <div class="d-flex align-items-center">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <span class="text-white me-3">
                            <i class="fa fa-user-circle me-1"></i>@Context.Session.GetString("Username")
                        </span>
                        <a class="btn btn-outline-light btn-sm" asp-controller="Auth" asp-action="Logout">
                            <i class="fa fa-right-from-bracket me-1"></i>Đăng xuất
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm me-2" asp-controller="Auth" asp-action="Login">
                            <i class="fa fa-right-to-bracket me-1"></i>Đăng nhập
                        </a>
                        <a class="btn btn-light btn-sm" asp-controller="Auth" asp-action="Register">
                            <i class="fa fa-user-plus me-1"></i>Đăng ký
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container py-5">
        @RenderBody()
    </main>

    <!-- TOAST NOTIFICATION -->
    @await Html.PartialAsync("_Toast")

    <!-- FOOTER -->
    <footer class="mt-5 border-top">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold text-primary">DT GPLX</h5>
                    <p class="text-muted small mb-3">
                        Hệ thống quản lý đào tạo lái xe thông minh — ASP.NET Core + SQL Server.
                    </p>
                    <div class="social">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                        <a href="#"><i class="fab fa-github"></i></a>
                    </div>
                </div>

                <div class="col-6 col-md-4 mb-4">
                    <h6 class="fw-semibold mb-3">Liên kết nhanh</h6>
                    <ul class="list-unstyled small text-muted">
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Điều khoản sử dụng</a></li>
                        <li><a href="#">Trung tâm hỗ trợ</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md-4 mb-4">
                    <h6 class="fw-semibold mb-3">Liên hệ</h6>
                    <ul class="list-unstyled small text-muted">
                        <li><i class="fa fa-envelope me-2 text-primary"></i> support@gplx.vn</li>
                        <li><i class="fa fa-phone me-2 text-primary"></i> 0123 456 789</li>
                        <li><i class="fa fa-location-dot me-2 text-primary"></i> 123 Nguyễn Văn Cừ, Q.5, TP.HCM</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="footer-bottom py-3 bg-light border-top">
            <div class="container d-flex flex-column flex-sm-row justify-content-between align-items-center small text-muted">
                <div>© @DateTime.Now.Year <strong>DT GPLX</strong>. All rights reserved.</div>
                <div>Thiết kế bởi <a href="#" class="fw-semibold text-primary">Nhóm Đồ án Chuyên ngành</a></div>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

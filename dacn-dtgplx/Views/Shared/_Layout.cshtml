                        <a href="#" aria-label="Zalo"><i class="fa-solid fa-comments"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h6>Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#">Điều khoản sử dụng</a></li>
                        <li class="mb-2"><a href="#">Chính sách bảo mật</a></li>
                        <li class="mb-2"><a href="#">Hướng dẫn đăng ký</a></li>
                        <li class="mb-2"><a href="#">Hỗ trợ học viên</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6>Liên hệ</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fa fa-envelope me-2"></i>
                            support@dtgplx.vn
                        </li>
                        <li class="mb-2">
                            <i class="fa fa-phone me-2"></i>
                            0123 456 789
                        </li>
                        <li class="mb-2">
                            <i class="fa fa-location-dot me-2"></i>
                            123 Nguyễn Văn Cừ, Q.5, TP.HCM
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Cột trái: Bản quyền -->
                    <div class="col-md-6 mb-2 mb-md-0 text-center text-md-start">
                        <p>© @DateTime.Now.Year DT GPLX. Bản quyền thuộc về trung tâm.</p>
                    </div>
                    <!-- Cột phải: Online + Team Hải Lộc trên cùng 1 hàng -->
                    <div class="col-md-6 mb-2 mb-md-0">
                        <div class="d-flex justify-content-center justify-content-md-end align-items-center gap-3">
                            <!-- Khối online -->
                            @if (Context.Session.GetString("Username") != null)
                            {
                                <div class="text-center">
                                    <div class="d-inline-flex align-items-center gap-2">
                                        <i class="fa fa-circle text-success"></i>
                                        <span id="onlineNumber">0 người đang online</span>
                                        <!-- Online users dropdown -->
                                        <button class="btn btn-light btn-sm border" data-bs-toggle="dropdown">
                                            <i class="fa fa-users"></i>
                                        </button>
                                        <ul class="dropdown-menu shadow" style="width: 260px;">
                                            <li class="px-3 py-2 d-flex justify-content-between align-items-center">
                                                <strong>Người dùng đang online</strong>
                                                <button class="btn btn-sm btn-outline-primary" onclick="loadOnlineUsers()">
                                                    <i class="fa fa-rotate"></i>
                                                </button>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <div id="onlineUsersList" style="max-height: 250px; overflow-y: auto;">
                                                <p class="text-center text-muted small py-3">Đang tải...</p>
                                            </div>
                                            <li><hr class="dropdown-divider"></li>
                                            <li class="text-center text-muted small py-2">
                                                Tự động cập nhật mỗi 30 giây
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            }
                            <!-- Text Team Hải Lộc (nằm sát bên phải khối online) -->
                            <p class="mb-0 text-muted">
                                Phát triển bởi <strong>Team Hải Lộc nè!!!</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Toastr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.js"></script>
    @RenderSection("Scripts", required: false)
    @await Html.PartialAsync("_Toast")
    <script>
        // Load số thông báo chưa đọc
        function loadUnreadCount() {
            fetch('/Notification/CountUnread')
                .then(res => res.json())
                .then(count => {
                    const badge = document.getElementById("notificationBadge");

                    if (count > 0) {
                        badge.classList.remove("d-none");
                        badge.innerText = count;
                    } else {
                        badge.classList.add("d-none");
                    }
                });
        }

        setInterval(loadUnreadCount, 5000);
        loadUnreadCount();

        function loadNotifications() {
            fetch('/Notification/GetNotifications')
                .then(res => res.json())
                .then(result => {
                    const box = document.getElementById("notificationList");

                    if (!result.success || result.data.length === 0) {
                        box.innerHTML = `
                            <p class="text-center text-muted small py-3">Không có thông báo nào.</p>
                        `;
                        return;
                    }

                    let html = "";
                    result.data.forEach(n => {

                        // Tạo html cho cụm nút, chỉ thêm nút "đã đọc" nếu DaXem = false
                        let actionsHtml = `
                            <button class="btn btn-sm btn-outline-danger" title="Xóa"
                                    onclick="deleteNotification(${n.thongBaoId})">
                                <i class="fa fa-trash"></i>
                            </button>`;

                        if (!n.daXem) {   // đã xem rồi thì không thêm nút check
                            actionsHtml =
                                `<button class="btn btn-sm btn-outline-success" title="Đánh dấu đã xem"
                                         onclick="markAsRead(${n.thongBaoId})">
                                    <i class="fa fa-check"></i>
                                </button>` + actionsHtml;
                        }

                        html += `
                            <div class="px-3 py-2 border-bottom">
                                <div class="d-flex justify-content-between align-items-start">

                                    <div>
                                        <strong>${n.tieuDe}</strong>
                                        <p class="small text-muted mb-1">${n.noiDung}</p>
                                        <span class="small text-secondary">
                                            ${new Date(n.thoiGianGui).toLocaleString('vi-VN')}
                                        </span>
                                    </div>

                                    <div class="ms-2 d-flex flex-column align-items-center gap-2" style="white-space: nowrap;">
                                        ${actionsHtml}
                                    </div>

                                </div>
                            </div>`;
                    });
                    box.innerHTML = html;
                });
        }

        function refreshNotifications() {
            loadNotifications();
            loadUnreadCount();
        }

        function markAllAsRead() {
            fetch('/Notification/MarkAllAsRead', { method: 'POST' })
                .then(res => res.json())
                .then(result => {
                    if (result.success) {
                        loadUnreadCount();
                        loadNotifications();
                        toastr.success("Đã đánh dấu tất cả thông báo.");
                    }
                });
        }

        function markAsRead(id) {
            fetch('/Notification/MarkAsRead/' + id, { method: 'POST' })
                .then(res => res.json())
                .then(result => {
                    if (result.success) {
                        loadUnreadCount();
                        loadNotifications();
                    }
                });
        }

        function deleteNotification(id) {
            if (!confirm("Xóa thông báo này?")) return;

            fetch('/Notification/Delete/' + id, { method: 'DELETE' })
                .then(res => res.json())
                .then(result => {
                    if (result.success) {
                        loadUnreadCount();
                        loadNotifications();
                        toastr.success("Đã xóa thông báo.");
                    }
                });
        }

        // ========================= ONLINE CHECK =========================

        // 1) Ping user mỗi 5 giây để báo đang online
        function pingOnline() {
            fetch('/online/ping');
        }

        setInterval(pingOnline, 5000);
        pingOnline();


        // 2) Lấy số người online
        function loadOnlineCount() {
            fetch('/online/count')
                .then(res => res.json())
                .then(result => {
                    document.getElementById("onlineNumber").innerText =
                        result.count + " người đang online";
                });
        }
        setInterval(loadOnlineCount, 5000);
        loadOnlineCount();


        // 3) Lấy danh sách người online (dropdown)
        function loadOnlineUsers() {
            fetch('/online/users')
                .then(res => res.json())
                .then(result => {
                    const box = document.getElementById("onlineUsersList");

                    if (!result.success || result.data.length === 0) {
                        box.innerHTML = `
                            <p class="text-center text-muted small py-3">
                                Không có ai đang online
                            </p>`;
                        return;
                    }

                    let html = "";
                    result.data.forEach(u => {
                        html += `
                            <div class="d-flex align-items-center px-3 py-2 border-bottom">
                                <img src="${u.avatar}"
                                     class="rounded-circle me-2"
                                     style="width: 32px; height: 32px; object-fit: cover;">

                                <div>
                                    <strong>${u.fullName}</strong>
                                    <p class="small text-muted mb-0">${u.email}</p>
                                </div>

                                <span class="small text-success ms-auto">
                                    ● Online
                                </span>
                            </div>
                        `;
                    });

                    box.innerHTML = html;
                });
        }

        function loadUnreadMessages() {
            fetch('/Conversation/CountUnread')
                .then(res => res.json())
                .then(count => {
                    const badge = document.getElementById('messageBadge');
                    if (!badge) return;

                    if (count > 0) {
                        badge.classList.remove('d-none');
                        badge.innerText = count;
                    } else {
                        badge.classList.add('d-none');
                    }
                });
        }

    </script>

</body>
</html>
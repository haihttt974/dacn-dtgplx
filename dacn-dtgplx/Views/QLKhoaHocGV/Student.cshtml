@model List<dacn_dtgplx.Models.DangKyHoc>

<h3>Danh sách học viên – @ViewBag.TenKhoaHoc</h3>

<form method="get" class="mb-3">
    <input type="hidden" name="idKhoaHoc" value="@Context.Request.Query["idKhoaHoc"]" />

    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.Search"
               class="form-control" placeholder="Tìm theo Mã ĐK, Tên, SĐT, Email" />

        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i> Tìm
        </button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã ĐK</th>
            <th>Họ tên</th>
            <th>SĐT</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dk in Model)
        {
            <tr>
                <td>@dk.IdDangKy</td>
                <td>@dk.HoSo.User.TenDayDu</td>
                <td>@dk.HoSo.User.SoDienThoai</td>
                <td>@dk.HoSo.User.Email</td>

                <td>
                    <button class="btn btn-info btn-sm view-student" data-id="@dk.IdDangKy">
                        Xem
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="studentModalContainer"></div>

@section Scripts {
    <script>
        $(document).on("click", ".view-student", function () {
            let id = $(this).data("id");

            $.ajax({
                url: "/GiaoVien/StudentDetail",
                type: "GET",
                data: { idDangKy: id },
                success: function (html) {
                    $("#studentModalContainer").html(html);
                    $("#hsModal").modal("show");
                },
                error: function () {
                    alert("Không thể tải thông tin học viên.");
                }
            });
        });
    </script>
}

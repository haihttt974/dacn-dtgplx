@model IEnumerable<dacn_dtgplx.Models.User>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card shadow-sm">

            <!-- Header card -->
            <div class="card-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <form method="get" class="d-flex" style="width:280px;">
                        <input type="text" name="q" value="@Context.Request.Query["q"]"
                               class="form-control form-control-sm" placeholder="Tìm theo email / họ tên..." />
                        <button type="submit" class="btn btn-sm btn-outline-secondary ms-2">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                    <a asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Thêm
                    </a>
                </div>
            </div>

            <!-- Bộ lọc vai trò -->
            <div class="card-body">
                <form method="get" class="mb-3 d-inline-block">
                    <label class="fw-semibold me-2">Lọc theo vai trò:</label>
                    <select name="roleId" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="">-- Tất cả --</option>
                        @foreach (var r in (IEnumerable<dacn_dtgplx.Models.Role>)ViewBag.Roles)
                        {
                            var isSelected = (int?)ViewBag.CurrentRoleId == r.RoleId;
                            <option value="@r.RoleId" selected="@(isSelected ? "selected" : null)">
                                @r.RoleName
                            </option>
                        }
                    </select>
                </form>

                <!-- Bảng danh sách -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-nowrap">
                        <thead class="table-light">
                            <tr>
                                <th style="width:40px;">#</th>
                                <th style="width:50px;">Ảnh</th>
                                <th style="max-width:140px;">Tên đăng nhập</th>
                                <th style="max-width:150px;">Họ tên</th>
                                <th style="max-width:120px;">Vai trò</th>
                                <th style="max-width:180px;">Email</th>
                                <th style="max-width:110px;">Điện thoại</th>
                                <th style="width:90px;">Trạng thái</th>
                                <th style="width:130px;">Cập nhật</th>
                                <th style="width:120px;" class="text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var index = 1;
                                foreach (var u in Model)
                                {
                                    var avatarPath = (u.Avatar ?? "/images/avatar/default.png").Replace("wwwroot", "");
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            <img src="@avatarPath" class="rounded-circle border"
                                                 width="36" height="36" style="object-fit:cover;" />
                                        </td>
                                        <td class="text-truncate" style="max-width:140px;">@u.Username</td>
                                        <td class="text-truncate" style="max-width:150px;">@u.TenDayDu</td>
                                        <td>@u.Role?.RoleName</td>
                                        <td class="text-truncate" style="max-width:180px;">@u.Email</td>
                                        <td>@u.SoDienThoai</td>
                                        <td>
                                            @if (u.TrangThai)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Đã khóa</span>
                                            }
                                        </td>
                                        <td>@(u.CapNhatLuc.ToLocalTime().ToString("dd/MM/yyyy HH:mm"))</td>
                                        <td class="text-end">
                                            <a asp-action="Details" asp-route-id="@u.UserId" class="btn btn-sm btn-info me-1" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@u.UserId" class="btn btn-sm btn-warning" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-4">
                                        <i class="fa fa-circle-exclamation me-1"></i> Không có người dùng nào được tìm thấy.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    td.text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

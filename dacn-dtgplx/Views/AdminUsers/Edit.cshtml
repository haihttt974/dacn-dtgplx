@model dacn_dtgplx.Models.User
@{
    ViewData["Title"] = "Cập nhật người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    string avatarPath = (Model.Avatar ?? "/images/avatar/default.png").Replace("wwwroot", "");
}

<section class="content-header">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1 class="fw-bold text-primary"> </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</section>

<section class="content mt-3">
    <div class="container-fluid">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning text-white">
                <h5 class="card-title mb-0 fw-semibold">
                    <i class="fas fa-user-edit me-2"></i> Thông tin người dùng
                </h5>
            </div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="TaoLuc" />
                <input type="hidden" asp-for="Password" />
                <input type="hidden" asp-for="CapNhatLuc" />
                <input type="hidden" id="Avatar" name="Avatar" value="@Model.Avatar" />

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <!-- Cột trái: Avatar -->
                        <div class="col-md-4 d-flex flex-column align-items-center mb-4">
                            <div class="avatar-picker position-relative" id="avatarPicker">
                                <img id="avatarPreview"
                                     src="@avatarPath"
                                     alt="Avatar"
                                     class="img-fluid rounded shadow-sm" />
                                <div class="overlay">
                                    <i class="fas fa-camera"></i>
                                </div>
                                <input type="file" id="AvatarFile" name="AvatarFile"
                                       accept="image/*" class="d-none" />
                            </div>
                            <p class="text-muted small mt-2">Nhấn vào ảnh để thay đổi</p>
                        </div>

                        <!-- Cột phải: Form -->
                        <div class="col-md-8">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Tên đăng nhập</label>
                                    <input asp-for="Username" class="form-control" readonly />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Họ và tên</label>
                                    <input asp-for="TenDayDu" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Email</label>
                                    <input asp-for="Email" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Số điện thoại</label>
                                    <input asp-for="SoDienThoai" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Địa chỉ</label>
                                    <input asp-for="DiaChi" class="form-control" />
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">Giới tính</label>
                                    <select asp-for="GioiTinh" class="form-select">
                                        <option value="">-- Chọn --</option>
                                        <option>Nam</option>
                                        <option>Nữ</option>
                                    </select>
                                </div>

                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">Ngày sinh</label>
                                    <input asp-for="NgaySinh" type="date" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Vai trò</label>
                                    <select asp-for="RoleId" class="form-select"
                                            asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName"))">
                                    </select>
                                </div>

                                <div class="col-md-6 d-flex align-items-end justify-content-end">
                                    <div class="text-end">
                                        <label class="form-label fw-semibold d-block">Trạng thái</label>
                                        <div class="form-check form-switch">
                                            <input asp-for="TrangThai" class="form-check-input" type="checkbox" />
                                            <label class="form-check-label" for="TrangThai">Kích hoạt tài khoản</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Ngày tạo</label>
                                    <input class="form-control bg-light" readonly
                                           value="@(Model.TaoLuc.ToLocalTime().ToString("dd/MM/yyyy HH:mm"))" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Cập nhật lúc</label>
                                    <input class="form-control bg-light" readonly
                                           value="@(Model.CapNhatLuc.ToLocalTime().ToString("dd/MM/yyyy HH:mm"))" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-end bg-light border-top">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Huỷ
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
    .avatar-picker {
        position: relative;
        width: 200px;
        height: 200px;
        border-radius: 10px;
        overflow: hidden;
        border: 3px solid #ffc107;
        transition: transform 0.25s ease;
    }

        .avatar-picker:hover {
            transform: scale(1.03);
        }

        .avatar-picker img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .avatar-picker .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.45);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.25s ease;
        }

            .avatar-picker .overlay i {
                color: #fff;
                font-size: 36px;
            }

        .avatar-picker:hover .overlay {
            opacity: 1;
            cursor: pointer;
        }

    .form-label {
        color: #444;
        font-size: 0.95rem;
    }

    .form-control, .form-select {
        border-radius: 6px;
        box-shadow: none !important;
    }

        .form-control:focus, .form-select:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.15rem rgba(255, 193, 7, 0.25);
        }

    .form-check-label {
        margin-left: 6px;
    }

</style>

@section Scripts {
    <script>
        // Avatar upload preview
        const picker = document.getElementById('avatarPicker');
        const fileInput = document.getElementById('AvatarFile');
        const preview = document.getElementById('avatarPreview');
        const hiddenInput = document.getElementById('Avatar');

        picker.addEventListener('click', () => fileInput.click());

        fileInput.addEventListener('change', e => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    hiddenInput.value = e.target.result; // base64 or file path
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

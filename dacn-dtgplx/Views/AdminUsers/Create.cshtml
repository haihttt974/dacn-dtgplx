@model dacn_dtgplx.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Thêm người dùng";
    // Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1 class="fw-bold text-primary"> </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</section>

<section class="content mt-3">
    <div class="container-fluid">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i> Thông tin người dùng</h5>
            </div>

            <form asp-action="Create" method="post" enctype="multipart/form-data" id="createUserForm">
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="avatar-picker mx-auto" id="avatarPicker">
                                <img id="avatarPreview" src="/images/avatar/default.png" alt="avatar" />
                                <div class="overlay"><i class="fas fa-camera"></i></div>
                                <input asp-for="AvatarFile" id="AvatarFile" accept="image/*" class="d-none" />
                            </div>
                            <small class="text-muted">Nhấn để chọn ảnh</small>
                            <span asp-validation-for="AvatarFile" class="text-danger d-block"></span>
                        </div>

                        <div class="col-md-8">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label fw-semibold"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Mật khẩu</label>
                                    <div class="input-group">
                                        <input asp-for="Password" id="Password" class="form-control" readonly placeholder="Chưa tạo" />
                                        <button type="button" id="btnRandomPassword" class="btn btn-outline-primary">
                                            <i class="fas fa-random me-1"></i> Random
                                        </button>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="TenDayDu" class="form-label fw-semibold"></label>
                                    <input asp-for="TenDayDu" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="SoDienThoai" class="form-label fw-semibold"></label>
                                    <input asp-for="SoDienThoai" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="RoleId" class="form-label fw-semibold"></label>
                                    <select asp-for="RoleId" class="form-select"
                                            asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName"))">
                                        <option value="">-- Chọn vai trò --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-end bg-light border-top">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Thêm người dùng
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
    .avatar-picker{position:relative;width:180px;height:180px;border-radius:10px;overflow:hidden;border:3px solid #007bff;transition:.2s}
    .avatar-picker:hover{transform:scale(1.03)}
    .avatar-picker img{width:100%;height:100%;object-fit:cover;display:block}
    .avatar-picker .overlay{position:absolute;inset:0;background:rgba(0,0,0,.45);display:flex;align-items:center;justify-content:center;opacity:0;transition:.25s}
    .avatar-picker:hover .overlay{opacity:1;cursor:pointer}
</style>

@section Scripts{
<script>
    // Avatar preview
    const picker = document.getElementById('avatarPicker');
    const fileInput = document.getElementById('AvatarFile');
    const preview = document.getElementById('avatarPreview');
    picker.addEventListener('click', ()=> fileInput.click());
    fileInput.addEventListener('change', e=>{
        const f = e.target.files[0];
        if(!f) return;
        const r = new FileReader();
        r.onload = e => preview.src = e.target.result;
        r.readAsDataURL(f);
    });

    // Random strong password
    const btnRandom = document.getElementById("btnRandomPassword");
    const passInput = document.getElementById("Password");
    btnRandom.addEventListener("click", ()=>{
        passInput.value = genStrong();
    });

    function genStrong(){
        const chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789@@$!%*?&#^_";
        let s = "";
        for(let i=0;i<12;i++) s += chars[Math.floor(Math.random()*chars.length)];
        return s;
    }
</script>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@model IEnumerable<dacn_dtgplx.Models.XeTapLai>

@{
    ViewData["Title"] = "Thuê Xe Tập Lái";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    .xe-card {
        border-radius: 14px;
        border: 1px solid #ddd;
        padding: 12px;
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: 0.25s;
    }

        .xe-card:hover {
            transform: translateY(-4px);
            box-shadow: 0px 6px 22px rgba(0,0,0,0.12);
        }

    .xe-img {
        width: 100%;
        height: 180px;
        object-fit: contain;
        border-radius: 12px;
        background: #fff;
    }

    .btn-thue {
        background: #00A862;
        color: white;
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 600;
        text-align: center;
        display: inline-block;
        transition: 0.2s;
    }

        .btn-thue:hover {
            background: #01804b;
            color: #fff;
        }

    /* MODAL */
    .modal-left-box {
        background: #f9f9f9;
        border-radius: 12px;
        padding: 20px;
    }

    .modal-left-img {
        width: 100%;
        height: 160px;
        object-fit: contain;
        border-radius: 10px;
        background: #fff;
    }
</style>

<div class="container py-4">

    <h2 class="fw-bold text-center mb-4">Danh Sách Xe Tập Lái</h2>

    <div id="xeContainer">
        @Html.Partial("_XeCards", Model)
    </div>

</div>

<!-- ======================= -->
<!-- MODAL NHẬP THÔNG TIN -->
<!-- ======================= -->

<div class="modal fade" id="rentModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">

            <div class="modal-header">
                <h5 class="modal-title fw-bold">Thuê xe tập lái</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="row">

                    <!-- CỘT TRÁI: THÔNG TIN XE -->
                    <div class="col-md-5 modal-left-box">
                        <img id="m_xeImg" class="modal-left-img mb-3" />

                        <h5 class="fw-bold text-primary" id="m_xeLoai"></h5>
                        <p><strong>Biển số:</strong> <span id="m_xeBienSo"></span></p>
                        <p><strong>Giá thuê theo giờ:</strong> <span id="m_xeGia"></span> đ</p>
                    </div>

                    <!-- CỘT PHẢI: NHẬP THÔNG TIN -->
                    <div class="col-md-7">

                        <input type="hidden" id="rentXeId" />

                        <h6 class="fw-bold mb-3">Thông tin người thuê</h6>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Họ tên *</label>
                                <input class="form-control" id="rentName" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email *</label>
                                <input class="form-control" id="rentEmail" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Số điện thoại</label>
                                <input class="form-control" id="rentPhone" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">CCCD</label>
                                <input class="form-control" id="rentCCCD" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Ngày & giờ bắt đầu *</label>
                                <input type="datetime-local" class="form-control" id="rentDateTime" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Số giờ thuê *</label>
                                <input type="number" class="form-control" id="rentDuration" value="1" min="1" />
                            </div>

                            <div class="alert alert-success mt-3">
                                Tổng tiền dự kiến: <b id="rentTotal">0</b> đ
                            </div>

                        </div>

                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-success" id="btnRentContinue">Tiếp tục</button>
            </div>

        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>

    // ===================================================
    // CLICK NÚT THUÊ XE
    // ===================================================
        function thueXe(id) {

        $.get("/ThueXe/Thue/" + id, function (res) {

            if (!res.success) {
                alert(res.message);
                return;
            }

            $("#rentXeId").val(id);

            // ==================
            // GET THÔNG TIN XE
            // ==================
            $.get("/api/xetaplai/" + id, function (xe) {
                $("#m_xeImg").attr("src", xe.anhXe);
                $("#m_xeLoai").text(xe.loaiXe);
                $("#m_xeBienSo").text(xe.bienSo);
                $("#m_xeGia").text(xe.giaThueTheoGio);
                $("#rentTotal").text(
                    (xe.giaThueTheoGio * parseInt($("#rentDuration").val())).toLocaleString()
                );
            });

            // KHÁCH
            if (res.requireLogin === false) {
                $("#rentName").val("");
                $("#rentEmail").val("");
                $("#rentPhone").val("");
                $("#rentCCCD").val("");
            }

            // USER ĐĂNG NHẬP
            if (res.requireLogin === true) {
                $("#rentName").val(res.userInfo.ten);
                $("#rentEmail").val(res.userInfo.email);
                $("#rentPhone").val(res.userInfo.sdt);
                $("#rentCCCD").val(res.userInfo.cccd);
            }

            $("#rentModal").modal("show");
        });
    }

    // ===================================================
    // TÍNH TIỀN DỰ KIẾN
    // ===================================================
    $("#rentDuration").on("input", function () {

        let hours = parseInt($(this).val());
        let price = parseInt($("#m_xeGia").text().replace(/\D/g, ""));

        $("#rentTotal").text((hours * price).toLocaleString());
    });

    // ===================================================
    // CLICK TIẾP TỤC
    // ===================================================
    $("#btnRentContinue").click(function () {

        let dto = {
            Ten: $("#rentName").val(),
            Email: $("#rentEmail").val(),
            SDT: $("#rentPhone").val(),
            CCCD: $("#rentCCCD").val(),

            XeId: $("#rentXeId").val(),
            RentStart: $("#rentDateTime").val(),
            Duration: $("#rentDuration").val(),
            TotalPrice: $("#rentTotal").text()
        };

        if (!dto.Ten || !dto.Email || !dto.RentStart) {
            alert("Vui lòng nhập đầy đủ thông tin bắt buộc.");
            return;
        }

        $.post("/ThueXe/LuuThongTinTam", dto, function (res) {
            if (res.success) {
                window.location.href = "/ThueXe/XacNhanThue?id=" + dto.XeId;
            }
        });

    });

</script>

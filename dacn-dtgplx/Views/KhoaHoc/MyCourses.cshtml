@model List<dacn_dtgplx.ViewModels.MyCourseVM>

@{
    ViewData["Title"] = "Khóa học của tôi";
}
<style>
    .course-card {
        transition: 0.25s ease-in-out;
    }

        .course-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.12);
        }

    .course-info i {
        width: 20px;
        text-align: center;
    }

</style>
<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">
        📚 Khóa học của tôi
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có khóa học nào đã thanh toán thành công.</div>
    }
    else
    {
        <div class="row g-4">

            @foreach (var item in Model)
            {
                var kh = item.KhoaHoc;
                var hang = kh.IdHangNavigation;
                var gv = item.GiaoVien;

                // Trạng thái khóa học
                var now = DateTime.Now;
                string statusText;
                string statusClass;

                if (kh.NgayBatDau.HasValue && kh.NgayKetThuc.HasValue)
                {
                    if (now < kh.NgayBatDau.Value)
                    {
                        statusText = "Sắp khai giảng";
                        statusClass = "badge bg-warning text-dark";
                    }
                    else if (now > kh.NgayKetThuc.Value)
                    {
                        statusText = "Đã kết thúc";
                        statusClass = "badge bg-secondary";
                    }
                    else
                    {
                        statusText = "Đang học";
                        statusClass = "badge bg-success";
                    }
                }
                else
                {
                    statusText = "Đã đăng ký";
                    statusClass = "badge bg-primary";
                }

                <div class="col-md-6">
                    <div class="card shadow-sm border-0 rounded-4 p-3 course-card">
                        <h4 class="text-primary fw-bold mb-2">@kh.TenKhoaHoc</h4>

                        <div class="mb-3 d-flex flex-wrap gap-2">
                            <span class="@statusClass">@statusText</span>
                            <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                Đã thanh toán
                            </span>
                        </div>

                        <div class="course-info">
                            <p class="mb-2">
                                <i class="fa-solid fa-id-card me-2 text-secondary"></i>
                                <strong>Hạng GPLX:</strong> @hang.MaHang
                            </p>

                            <p class="mb-2">
                                <i class="fa-solid fa-calendar-days me-2 text-secondary"></i>
                                <strong>Thời gian:</strong>
                                @kh.NgayBatDau?.ToString("dd/MM/yyyy") →
                                @kh.NgayKetThuc?.ToString("dd/MM/yyyy")
                            </p>

                            <p class="mb-2">
                                <i class="fa-solid fa-user-tie me-2 text-secondary"></i>
                                <strong>Giáo viên phụ trách:</strong>

                                @if (gv == null)
                                {
                                    <span class="text-muted">Chưa có giáo viên</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-success">@gv.TenDayDu</span>
                                }
                            </p>

                            <p class="text-muted mb-3" style="font-size: 0.9rem;">
                                <i class="fa-solid fa-clock me-2"></i>
                                Ngày đăng ký: @item.DangKy.NgayDangKy?.ToString("dd/MM/yyyy")
                            </p>
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <a href="/KhoaHoc/Schedule/@kh.KhoaHocId" class="btn btn-outline-primary flex-fill">
                                📅 Lịch học
                            </a>

                            @if (gv != null)
                            {
                                <button class="btn btn-warning flex-fill btnContact" data-gv="@gv.UserId" data-gvten="@gv.TenDayDu" data-kh="@kh.TenKhoaHoc">
                                    💬 Liên hệ giáo viên
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


<!-- MODAL LIÊN HỆ GIÁO VIÊN -->
<div class="modal fade" id="contactModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-warning">
                <h5 class="modal-title fw-bold">Xác nhận liên hệ</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p>
                    Bạn đang chuẩn bị mở cuộc trò chuyện với
                    <strong class="text-success" id="modalGvName"></strong>,
                    giáo viên phụ trách khóa học
                    <strong id="modalKhName"></strong>.
                </p>

                <p class="text-muted mb-0">
                    Sau khi xác nhận, bạn sẽ được chuyển đến trang nhắn tin để trao đổi trực tiếp với giáo viên.
                </p>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-primary" id="btnConfirmContact">
                    Xác nhận
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let selectedGv = 0;

    document.querySelectorAll(".btnContact").forEach(btn => {
        btn.addEventListener("click", function () {

            selectedGv = this.dataset.gv;

            document.getElementById("modalGvName").innerText = this.dataset.gvten;
            document.getElementById("modalKhName").innerText = this.dataset.kh;

            new bootstrap.Modal(document.getElementById("contactModal")).show();
        });
    });

    document.getElementById("btnConfirmContact").addEventListener("click", () => {

        fetch("/KhoaHoc/api/create-conversation", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                userId2: selectedGv
            })
        })
        .then(res => {
            if (res.ok) {
                // chuyển sang trang danh sách cuộc trò chuyện
                window.location.href = "/Message/Conversations/Index";
            }
        });
    });
</script>

@model dacn_dtgplx.Models.KhoaHoc

@{
    ViewBag.Title = "Xác nhận đăng ký khóa học";
    int hoSoId = ViewBag.HoSoId;
    decimal chiPhi = ViewBag.ChiPhi;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-4">

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <h3 class="fw-bold text-primary mb-3">
                <i class="fa-solid fa-book-open"></i>
                Xác nhận đăng ký khóa học
            </h3>

            <div class="row">

                <!-- Thông tin khóa học -->
                <div class="col-md-6">
                    <h5 class="fw-bold">@Model.TenKhoaHoc</h5>

                    <p>
                        <i class="fa-solid fa-id-card"></i>
                        <strong>Hạng GPLX:</strong> @Model.IdHangNavigation.MaHang
                    </p>

                    <p>
                        <i class="fa-solid fa-calendar"></i>
                        <strong>Thời gian:</strong>
                        @Model.NgayBatDau?.ToString("dd/MM/yyyy")
                        →
                        @Model.NgayKetThuc?.ToString("dd/MM/yyyy")
                    </p>

                    <p>
                        <i class="fa-solid fa-users"></i>
                        <strong>Số lượng tối đa:</strong> @Model.SlToiDa
                    </p>

                    @if (!string.IsNullOrWhiteSpace(Model.MoTa))
                    {
                        <p class="mt-3">
                            <i class="fa-solid fa-circle-info"></i>
                            <strong>Mô tả:</strong><br />
                            @Model.MoTa
                        </p>
                    }
                </div>

                <!-- Chi phí và xác nhận -->
                <div class="col-md-6">

                    <div class="alert alert-info">
                        <i class="fa-solid fa-money-check-dollar me-2"></i>
                        <strong>Học phí khóa học:</strong>
                        <span class="text-primary fw-bold">
                            @chiPhi.ToString("N0") VNĐ
                        </span>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                        Vui lòng kiểm tra kỹ <strong>lịch học</strong> của khóa để tránh trùng lịch.
                    </div>

                    <form method="post" action="/khoahoc/register/confirm">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="khoaHocId" value="@Model.KhoaHocId" />
                        <input type="hidden" name="hoSoId" value="@hoSoId" />

                        <button type="submit" class="btn btn-success w-100 fw-semibold rounded-3 mb-2">
                            <i class="fa-solid fa-check"></i> Xác nhận đăng ký
                        </button>

                        <a href="/khoahoc" class="btn btn-outline-secondary w-100 rounded-3">
                            Quay lại danh sách khóa học
                        </a>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>

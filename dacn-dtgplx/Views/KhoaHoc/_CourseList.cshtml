@model List<dacn_dtgplx.Models.KhoaHoc>

@{
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<style>
    /* ---------------- COURSE CARD ---------------- */
    .course-card {
        border-radius: 12px;
        background: #fff;
        padding: 18px;
        border: 1px solid #e8eaed;
        box-shadow: 0 2px 6px rgba(0,0,0,.05);
        transition: .25s ease;
        position: relative;
        overflow: hidden;
        height: 100%;
    }

        .course-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,.12);
        }

    /* -------- Học phí overlay (vị trí khung đỏ) -------- */
    .card-overlay {
        position: absolute;
        top: 42px; /* chỉnh ngang hàng với chữ Hạng */
        right: 15px;
        background: #0d6efd;
        color: #fff;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        white-space: nowrap;
        opacity: 0;
        transform: translateX(20px);
        transition: .25s ease-in-out;
    }

    .course-card:hover .card-overlay {
        opacity: 1;
        transform: translateX(0);
    }
</style>


@if (!Model.Any())
{
    <div class="alert alert-warning fw-bold text-center py-3">
        Không tìm thấy khóa học phù hợp.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="course-card">

                    <!-- Overlay học phí khi hover -->
                    <div class="card-overlay">
                        Học phí: @(item.IdHangNavigation.ChiPhi?.ToString("N0") ?? "Liên hệ") VNĐ
                    </div>

                    <!-- Title -->
                    <h5 class="fw-bold text-primary">@item.TenKhoaHoc</h5>

                    <!-- Hạng -->
                    <p class="mt-2 mb-1">
                        <i class="fa-solid fa-id-card"></i>
                        <strong>Hạng:</strong> @item.IdHangNavigation.MaHang
                    </p>

                    <!-- Ngày học -->
                    <p class="mb-1">
                        <i class="fa-solid fa-calendar-days"></i>
                        @item.NgayBatDau?.ToString("dd/MM/yyyy")
                        → @item.NgayKetThuc?.ToString("dd/MM/yyyy")
                    </p>

                    <!-- Số lượng -->
                    <p class="mb-3">
                        <i class="fa-solid fa-users"></i>
                        Số lượng tối đa: @item.SlToiDa
                    </p>

                    <!-- BUTTON -->
                    <div class="mt-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/khoahoc/register/@item.KhoaHocId"
                               class="btn btn-success w-100 fw-semibold rounded-3">
                                Đăng ký
                            </a>
                        }
                        else
                        {
                            <a href="Auth/login"
                               class="btn btn-outline-secondary w-100 fw-semibold rounded-3">
                                Đăng nhập để đăng ký
                            </a>
                        }
                    </div>

                </div>
            </div>
        }

    </div>
}

<!-- ====================== PAGINATION ====================== -->
@if (totalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- PREV -->
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <button class="page-link" onclick="loadCourses(@(page - 1))">«</button>
            </li>

            <!-- PAGES -->
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(page == i ? "active" : "")">
                    <button class="page-link" onclick="loadCourses(@i)">
                        @i
                    </button>
                </li>
            }

            <!-- NEXT -->
            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <button class="page-link" onclick="loadCourses(@(page + 1))">»</button>
            </li>

        </ul>
    </nav>
}

@model List<dacn_dtgplx.Models.KhoaHoc>

@{
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

@if (!Model.Any())
{
    <div class="alert alert-warning fw-bold text-center py-3">
        Không tìm thấy khóa học phù hợp.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="course-card h-100 d-flex flex-column">

                    <!-- Tên khóa học -->
                    <h5 class="fw-bold text-primary mb-2">@item.TenKhoaHoc</h5>

                    <!-- Hạng GPLX -->
                    <p class="mb-1">
                        <i class="fa-solid fa-id-card"></i>
                        <strong> Hạng:</strong> @item.IdHangNavigation.MaHang
                    </p>

                    <!-- Ngày học -->
                    <p class="mb-1">
                        <i class="fa-solid fa-calendar-days"></i>
                        @item.NgayBatDau?.ToString("dd/MM/yyyy")
                        → @item.NgayKetThuc?.ToString("dd/MM/yyyy")
                    </p>

                    <!-- Số lượng -->
                    <p class="mb-3">
                        <i class="fa-solid fa-users"></i>
                        Số lượng tối đa: @item.SlToiDa
                    </p>

                    <!-- Học phí overlay -->
                    <div class="price-overlay">
                        Học phí: @(item.IdHangNavigation.ChiPhi?.ToString("N0") ?? "Liên hệ") VNĐ
                    </div>

                    <!-- Nút -->
                    <div class="mt-auto pt-2">

                        <!-- Chi tiết -->
                        <a href="/khoahoc/details/@item.KhoaHocId"
                           class="btn btn-outline-primary w-100 fw-semibold rounded-3 mb-2">
                            <i class="fa-solid fa-circle-info me-1"></i> Chi tiết khóa học
                        </a>

                        <!-- Đăng ký -->
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a href="/khoahoc/register/@item.KhoaHocId"
                               class="btn btn-success w-100 fw-semibold rounded-3 btnDangKy"
                               data-id="@item.KhoaHocId">
                                <i class="fa-solid fa-check me-1"></i> Đăng ký khóa học
                            </a>
                        }
                        else
                        {
                            <a href="/auth/login"
                               class="btn btn-outline-secondary w-100 fw-semibold rounded-3">
                                <i class="fa-solid fa-lock me-1"></i> Đăng nhập để đăng ký
                            </a>
                        }

                    </div>

                </div>
            </div>
        }

    </div>
}

<!-- PHÂN TRANG -->
@if (totalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(page == 1 ? "disabled" : "")">
                <button class="page-link" onclick="loadCourses(@(page - 1))">«</button>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(page == i ? "active" : "")">
                    <button class="page-link" onclick="loadCourses(@i)">
                        @i
                    </button>
                </li>
            }

            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <button class="page-link" onclick="loadCourses(@(page + 1))">»</button>
            </li>

        </ul>
    </nav>
}

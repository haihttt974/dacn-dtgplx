@{
    ViewData["Title"] = "500 - Lỗi máy chủ";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>500 - Internal Server Error</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: #dc3545;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .box {
            padding: 40px;
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            text-align: center;
        }

        .code {
            font-size: 80px;
            font-weight: 900;
        }
    </style>
</head>

<body>
    <div class="box">
        <i class="fa-solid fa-server fa-3x mb-3"></i>
        <div class="code">500</div>
        <h4>Lỗi hệ thống</h4>
        <p>Máy chủ gặp sự cố. Chúng tôi sẽ khắc phục sớm nhất.</p>
        <button onclick="history.back()" class="btn btn-outline-light mt-3 px-4" style="transition:0.3s;">
            <i class="fa fa-arrow-left me-2"></i>Quay lại
        </button>
        <script>
            const btn = document.querySelector("button[onclick='history.back()']");
            btn.onmouseover = () => btn.style.transform = "scale(1.05)";
            btn.onmouseout = () => btn.style.transform = "scale(1)";
        </script>

    </div>
</body>
</html>

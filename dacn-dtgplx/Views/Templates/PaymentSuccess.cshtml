@model dacn_dtgplx.ViewModels.PaymentEmailVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
</head>
<body style="font-family: Arial; background:#f5f5f5; padding:20px;">
    <div style="background: white; padding:20px; border-radius:8px; max-width:600px; margin:auto;">

        <h2 style="color:#0d6efd">Xác nhận thanh toán thành công</h2>

        <p>Xin chào <strong>@Model.FullName</strong>,</p>

        <p>Bạn đã thanh toán thành công cho khóa học:</p>
        <h3>@Model.CourseName</h3>

        <p>
            Số tiền thanh toán:
            <strong>@Model.Amount.ToString("N0") VNĐ</strong>
        </p>

        <p>Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi.</p>

        <hr />
        <small>Email tự động – vui lòng không phản hồi.</small>
    </div>
</body>
</html>

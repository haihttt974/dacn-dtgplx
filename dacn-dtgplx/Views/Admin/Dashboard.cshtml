@{
    ViewData["Title"] = "Bảng điều khiển";
}

<section class="content">
    <div class="container-fluid">

        <!-- Hàng 4 ô thống kê -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>120</h3>
                        <p>Đơn hàng mới</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <a href="#" class="small-box-footer">Xem thêm <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>85<sup style="font-size: 20px">%</sup></h3>
                        <p>Tỷ lệ hoàn thành</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <a href="#" class="small-box-footer">Chi tiết <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner text-white">
                        <h3>40</h3>
                        <p>Người dùng mới</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <a href="#" class="small-box-footer text-white">Xem thêm <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>5</h3>
                        <p>Sản phẩm hết hàng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <a href="#" class="small-box-footer">Kiểm tra <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>

        <!-- Biểu đồ -->
        <div class="row">
            <section class="col-lg-7 connectedSortable">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title"><i class="fas fa-chart-area mr-1"></i> Doanh thu tháng</h3>
                    </div>
                    <div class="card-body">
                        <div class="chart">
                            <canvas id="revenueChart" style="height: 250px;"></canvas>
                        </div>
                    </div>
                </div>
            </section>

            <section class="col-lg-5 connectedSortable">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title"><i class="fas fa-chart-pie mr-1"></i> Tỷ lệ đơn hàng</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="ordersPieChart" style="height: 250px;"></canvas>
                    </div>
                </div>
            </section>
        </div>

        <!-- Bảng dữ liệu mẫu -->
        <div class="card mt-3">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">Đơn hàng gần đây</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped m-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Trạng thái</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#001</td>
                            <td>Nguyễn Văn A</td>
                            <td>08/11/2025</td>
                            <td><span class="badge badge-success">Hoàn tất</span></td>
                            <td>2.000.000₫</td>
                        </tr>
                        <tr>
                            <td>#002</td>
                            <td>Trần Thị B</td>
                            <td>07/11/2025</td>
                            <td><span class="badge badge-warning">Đang xử lý</span></td>
                            <td>1.200.000₫</td>
                        </tr>
                        <tr>
                            <td>#003</td>
                            <td>Lê Văn C</td>
                            <td>06/11/2025</td>
                            <td><span class="badge badge-danger">Đã hủy</span></td>
                            <td>800.000₫</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-right">
                <a href="#" class="btn btn-sm btn-primary">Xem tất cả</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
    <script>
        // Chart: Doanh thu tháng
        var ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Th1', 'Th2', 'Th3', 'Th4', 'Th5', 'Th6', 'Th7'],
                datasets: [{
                    label: 'Doanh thu (triệu VNĐ)',
                    data: [10, 15, 8, 12, 20, 18, 25],
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0,123,255,0.1)',
                    fill: true
                }]
            }
        });

        // Chart: Tỷ lệ đơn hàng
        var ctx2 = document.getElementById('ordersPieChart').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Hoàn tất', 'Đang xử lý', 'Đã hủy'],
                datasets: [{
                    data: [60, 30, 10],
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                }]
            },
            options: {
                legend: { position: 'bottom' }
            }
        });
    </script>
}

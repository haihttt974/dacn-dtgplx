@model dacn_dtgplx.Models.KhoaHoc

@{
    ViewData["Title"] = "Chi tiết khóa học";
}

<div class="container mt-4">

    <h3 class="mb-3 text-primary">
        <i class="fa fa-info-circle"></i> Chi tiết khóa học
    </h3>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <strong>@Model.TenKhoaHoc</strong>
        </div>

        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="fw-bold">Hạng GPLX:</label>
                    <div>@Model.IdHangNavigation.TenDayDu</div>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold">Số lượng tối đa:</label>
                    <div>@Model.SlToiDa học viên</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="fw-bold">Ngày bắt đầu:</label>
                    <div>@Model.NgayBatDau?.ToString("dd/MM/yyyy")</div>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold">Ngày kết thúc:</label>
                    <div>@Model.NgayKetThuc?.ToString("dd/MM/yyyy")</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Mô tả khóa học:</label>
                <div>@(string.IsNullOrEmpty(Model.MoTa) ? "(Không có mô tả)" : Model.MoTa)</div>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Trạng thái:</label>
                <div>
                    @if (Model.IsActive == true)
                    {
                        <span class="badge bg-success">Đang mở</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngừng mở</span>
                    }
                </div>
            </div>

        </div>

        <div class="card-footer text-end">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Quay lại
            </a>

            <a href="@Url.Action("Edit", new { id = Model.KhoaHocId })"
               class="btn btn-warning">
                <i class="fa fa-edit"></i> Chỉnh sửa
            </a>
        </div>

    </div>

</div>

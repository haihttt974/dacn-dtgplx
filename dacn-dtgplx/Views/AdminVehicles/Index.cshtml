@model IEnumerable<dacn_dtgplx.Models.XeTapLai>

@{
    ViewData["Title"] = "Quản lý xe tập lái";
}

<div class="container-fluid mt-3">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-primary mb-0">
            <i class="fa fa-car"></i> Danh sách xe tập lái
        </h4>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus-circle me-1"></i> Thêm xe
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0 align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th style="width:60px;">#</th>
                        <th>Tên xe (Loại xe)</th>
                        <th style="width:140px;">Trạng thái</th>
                        <th style="width:180px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int stt = 1;
                        foreach (var xe in Model)
                        {
                            <tr>
                                <td class="text-center">@stt</td>
                                <td>@xe.LoaiXe</td>
                                <td class="text-center">
                                    @if (xe.TrangThaiXe)
                                    {
                                        <span class="badge bg-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngừng hoạt động</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@xe.XeTapLaiId"
                                       class="btn btn-info btn-sm me-1" title="Xem lịch">
                                        <i class="fa fa-calendar"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@xe.XeTapLaiId"
                                       class="btn btn-warning btn-sm me-1">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@xe.XeTapLaiId"
                                          method="post" class="d-inline"
                                          onsubmit="return confirm('Xóa xe này?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

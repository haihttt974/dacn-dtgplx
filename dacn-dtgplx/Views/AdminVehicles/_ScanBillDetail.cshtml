@model HoaDonThanhToan

<div class="card border-0 shadow-sm">
    <div class="card-body">

        <h5 class="fw-bold text-primary mb-3">
            <i class="fa-solid fa-motorcycle me-2"></i>Thông tin thuê xe
        </h5>

        <table class="table table-sm table-borderless mb-3">
            <tr>
                <th width="160">Người thuê</th>
                <td>@Model.PhieuTx.User.Username</td>
            </tr>
            <tr>
                <th>Loại xe</th>
                <td>@Model.PhieuTx.Xe.LoaiXe</td>
            </tr>
            <tr>
                <th>Thời gian thuê</th>
                <td>
                    @Model.PhieuTx.TgBatDau?.ToString("dd/MM/yyyy HH:mm") –
                    @(Model.PhieuTx.TgBatDau?.AddHours(Model.PhieuTx.TgThue ?? 0).ToString("HH:mm"))
                </td>
            </tr>
            <tr>
                <th>Thanh toán</th>
                <td>
                    @if (Model.TrangThai == true)
                    {
                        <span class="badge bg-success">Đã thanh toán</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Chưa thanh toán</span>
                    }
                </td>
            </tr>
        </table>

        <hr />

        <div class="d-flex gap-2 justify-content-end">
            @if (Model.PhieuTx.DaLayXe)
            {
                <button class="btn btn-secondary" disabled>
                    <i class="fa-solid fa-check me-1"></i>Đã lấy xe
                </button>
            }
            else
            {
                <button class="btn btn-success"
                        onclick="confirmTakeVehicle(@Model.PhieuTx.PhieuTxId)">
                    <i class="fa-solid fa-key me-1"></i>Xác nhận lấy xe
                </button>

                <button class="btn btn-outline-danger"
                        data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark me-1"></i>Hủy
                </button>
            }
        </div>

    </div>
</div>

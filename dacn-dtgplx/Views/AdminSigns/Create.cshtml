@model dacn_dtgplx.Models.BienBao

@{
    ViewData["Title"] = "Thêm biển báo";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-lg-8 col-xl-7 mx-auto">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-plus-circle me-1"></i> Thêm biển báo mới
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="TenBienBao" class="form-label fw-semibold">Tên biển báo</label>
                            <input asp-for="TenBienBao" class="form-control" />
                            <span asp-validation-for="TenBienBao" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ynghia" class="form-label fw-semibold">Ý nghĩa</label>
                            <textarea asp-for="Ynghia" rows="4" class="form-control"></textarea>
                            <span asp-validation-for="Ynghia" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Hình ảnh biển báo</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fa fa-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-1"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model List<dacn_dtgplx.ViewModels.AdminPaymentViewModel>
@{
    ViewData["Title"] = "Quản lý thanh toán";
}

<div class="container-fluid py-5">
    <div class="row">
        <div class="col-12">
            <!-- Card chính với viền nhẹ và shadow mềm -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <!-- Header hiện đại: gradient nhẹ xanh ngọc -->
                <div class="card-header bg-gradient text-white border-0 py-4"
                     style="background: linear-gradient(135deg, #0dcaf0, #0d6efd) !important;">
                    <div class="d-flex align-items-center justify-content-between">
                        <h3 class="mb-0 fw-bold">
                            <i class="fas fa-credit-card me-3"></i>
                            Danh sách thanh toán
                        </h3>
                        <span class="badge bg-white text-primary fs-6 px-3 py-2 rounded-pill">
                            @Model.Count thanh toán
                        </span>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <!-- Header bảng nhẹ nhàng, không dùng table-dark nữa -->
                            <thead class="bg-light border-bottom">
                                <tr class="text-secondary fw-semibold">
                                    <th class="ps-4">Học viên</th>
                                    <th>Email</th>
                                    <th>SĐT</th>
                                    <th>Khóa học</th>
                                    <th>Số tiền</th>
                                    <th>Phương thức</th>
                                    <th>Ngày</th>
                                    <th>Trạng thái</th>
                                    <th class="text-center pe-4">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="border-bottom">
                                        <td class="ps-4 fw-medium">@item.TenHocVien</td>
                                        <td class="text-muted">@item.Email</td>
                                        <td>@item.SoDienThoai</td>
                                        <td class="text-primary fw-medium">@item.TenKhoaHoc</td>
                                        <td class="fw-bold text-success fs-5">
                                            @item.SoTien?.ToString("N0")<sup>đ</sup>
                                        </td>
                                        <td>
                                            <span class="text-capitalize">@item.PhuongThucThanhToan</span>
                                        </td>
                                        <td class="text-muted">
                                            @item.NgayThanhToan?.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @if (item.TrangThai == true)
                                            {
                                                <span class="badge bg-success-subtle text-success border border-success px-3 py-2 rounded-pill">
                                                    <i class="fas fa-check-circle me-1"></i> Đã thanh toán
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning-subtle text-warning border border-warning px-3 py-2 rounded-pill">
                                                    <i class="fas fa-clock me-1"></i> Chưa thanh toán
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center pe-4">
                                            @if (item.TrangThai != true)
                                            {
                                                <form asp-action="Confirm" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.IdThanhToan" />
                                                    <button type="submit"
                                                            class="btn btn-sm btn-primary rounded-pill px-4 shadow-sm">
                                                        <i class="fas fa-check me-1"></i> Xác nhận
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <small class="text-muted">—</small>
                                            }
                                        </td>
                                    </tr>
                                }

                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="9" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3 opacity-50"></i>
                                                <p class="mb-0">Chưa có dữ liệu thanh toán</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
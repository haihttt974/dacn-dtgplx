@model dacn_dtgplx.Models.HoaDonThanhToan

<div class="px-2"
     data-is-thuexe="@(Model.PhieuTx != null ? "true" : "false")"
     data-paid="@(Model.TrangThai == true ? "true" : "false")">

    <h5 class="fw-bold mb-3 text-primary">
        Hóa đơn #@Model.IdThanhToan
    </h5>

    <div class="row mb-3">
        <div class="col-4 fw-semibold text-secondary">Số tiền:</div>
        <div class="col-8 text-dark fw-bold">
            @((Model.SoTien ?? 0).ToString("N0")) đ
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-4 fw-semibold text-secondary">Ngày thanh toán:</div>
        <div class="col-8 text-dark">
            @(Model.NgayThanhToan?.ToString("dd/MM/yyyy HH:mm") ?? "---")
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-4 fw-semibold text-secondary">Phương thức:</div>
        <div class="col-8 text-dark">
            @Model.PhuongThucThanhToan
        </div>
    </div>

    @if (Model.IdDangKyNavigation != null)
    {
        <hr />
        <h6 class="fw-bold mb-3">Thông tin khóa học</h6>
        <div class="mb-2">
            <b>Khóa học:</b> @Model.IdDangKyNavigation.KhoaHoc?.TenKhoaHoc
        </div>
        <div class="mb-2">
            <b>Mã đăng ký:</b> @Model.IdDangKyNavigation.IdDangKy
        </div>
        <div class="mb-2">
            <b>Ghi chú:</b> @(Model.NoiDung ?? "Không có")
        </div>
    }

    @if (Model.PhieuTx != null)
    {
        <hr />
        <h6 class="fw-bold mb-3">Thông tin thuê xe</h6>
        <div class="mb-2">
            <b>Xe:</b> @Model.PhieuTx.Xe.LoaiXe – @Model.PhieuTx.Xe.BienSo
        </div>
        <div class="mb-2">
            <b>Bắt đầu:</b> @Model.PhieuTx.TgBatDau?.ToString("dd/MM/yyyy HH:mm")
        </div>
        <div class="mb-2">
            <b>Thời lượng:</b> @Model.PhieuTx.TgThue giờ
        </div>
    }

</div>

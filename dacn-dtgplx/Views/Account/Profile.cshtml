@model dacn_dtgplx.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Xử lý đường dẫn avatar
    string avatarPath = Model.Avatar ?? "";
    if (!string.IsNullOrWhiteSpace(avatarPath))
    {
        avatarPath = avatarPath.Replace("\\", "/");
        if (avatarPath.StartsWith("wwwroot/", StringComparison.OrdinalIgnoreCase))
            avatarPath = "/" + avatarPath.Substring("wwwroot/".Length);
        else if (!avatarPath.StartsWith("/"))
            avatarPath = "/" + avatarPath;
    }
    else
    {
        avatarPath = Url.Content("~/images/avatar/default.png");
    }
}

<div class="row justify-content-center">
    <div class="col-lg-8">

        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h5 class="mb-0 d-flex align-items-center">
                    <i class="fa-solid fa-user-pen me-2"></i> Hồ sơ cá nhân
                </h5>
            </div>

            <div class="card-body p-4">
                <form asp-action="Profile" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="row mb-4">
                        <div class="col-md-4 text-center">

                            <!-- Avatar preview -->
                            <img id="avatarPreview"
                                 src="@avatarPath"
                                 class="rounded-circle shadow-sm"
                                 style="width: 120px; height: 120px; object-fit: cover;" />

                            <div class="mt-3">
                                <label class="form-label fw-semibold">Ảnh đại diện</label>
                                <input type="file" name="avatarFile" id="avatarFile"
                                       class="form-control form-control-sm" accept="image/*" />

                                <small class="text-muted d-block mt-1">
                                    Chấp nhận JPG, PNG — tối đa 2MB
                                </small>
                            </div>
                        </div>

                        <div class="col-md-8">

                            <div class="mb-3">
                                <label asp-for="Username" class="form-label"></label>
                                <input asp-for="Username" class="form-control" readonly />
                            </div>

                            <div class="mb-3">
                                <label asp-for="TenDayDu" class="form-label"></label>
                                <input asp-for="TenDayDu" class="form-control" />
                                <span asp-validation-for="TenDayDu" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="SoDienThoai" class="form-label"></label>
                                    <input asp-for="SoDienThoai" class="form-control" />
                                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <hr />

                    <div class="row">

                        <div class="col-md-6 mb-3">
                            <label asp-for="NgaySinh" class="form-label"></label>
                            <input asp-for="NgaySinh" class="form-control" type="date"
                                   value="@(Model.NgaySinh.HasValue? Model.NgaySinh.Value.ToString("yyyy-MM-dd") : "")" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="GioiTinh" class="form-label"></label>
                            <select asp-for="GioiTinh" class="form-select">
                                <option value="">-- Chọn giới tính --</option>
                                <option value="Nam" selected="@(Model.GioiTinh == "Nam")">Nam</option>
                                <option value="Nữ" selected="@(Model.GioiTinh == "Nữ")">Nữ</option>
                            </select>
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Cccd" class="form-label"></label>
                            <input asp-for="Cccd" class="form-control" />
                            <span asp-validation-for="Cccd" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DiaChi" class="form-label"></label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-chevron-left me-1"></i> Quay lại Dashboard
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fa-solid fa-floppy-disk me-1"></i> Lưu thay đổi
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        const fileInput = document.getElementById("avatarFile");
        const avatarImg = document.getElementById("avatarPreview");

        fileInput.addEventListener("change", function () {
            if (this.files && this.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    avatarImg.src = e.target.result; // Preview ảnh mới
                };

                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">

        <!-- Alerts -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm">
                <i class="fa fa-circle-exclamation me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm">
                <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">

                <h4 class="text-center mb-4 fw-bold text-primary">
                    <i class="fa fa-key me-2"></i>Đặt lại mật khẩu
                </h4>

                <form asp-controller="Auth" asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        <input name="email" type="email" class="form-control" placeholder="Email" required />
                        <label>Email đăng ký</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input name="newPassword" type="password" class="form-control" placeholder="Mật khẩu mới" required minlength="6" />
                        <label>Mật khẩu mới</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 fw-semibold py-2">
                        <i class="fa fa-rotate-right me-2"></i>Cập nhật mật khẩu
                    </button>

                    <div class="text-center mt-3">
                        <a asp-controller="Auth" asp-action="Login" class="text-decoration-none">
                            <i class="fa fa-arrow-left me-1"></i>Quay lại đăng nhập
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

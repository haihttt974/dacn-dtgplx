@{
    Layout = "_Layout";
    var email = Context.Session.GetString("OTP_Email");
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">

                <h4 class="text-center text-primary fw-bold">
                    <i class="fa fa-lock me-2"></i>Đặt mật khẩu mới
                </h4>

                <p class="text-center text-muted">Email: <strong>@email</strong></p>

                <form asp-action="ResetPassword" method="post">

                    <div class="form-floating mb-3">
                        <input name="newPassword" type="password" class="form-control" required minlength="6" placeholder="New password" />
                        <label>Mật khẩu mới</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input name="confirmPassword" type="password" class="form-control" required minlength="6" placeholder="Confirm password" />
                        <label>Xác nhận lại mật khẩu</label>
                    </div>

                    <button class="btn btn-primary w-100 fw-semibold">
                        Cập nhật mật khẩu
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

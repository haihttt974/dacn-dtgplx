@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_Layout";
}

<style>
    :root {
        --register-main: #198754; /* xanh lá chủ đạo */
        --register-main-dark: #157347; /* màu hover */
    }

    .register-container {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .register-card {
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
        background: #fff;
    }

        .register-card .card-body {
            padding: 2.3rem;
        }

    .register-header {
        text-align: center;
        margin-bottom: 1.8rem;
    }

        .register-header h4 {
            color: var(--register-main);
            font-weight: 600;
            margin-bottom: 0.3rem;
        }

        .register-header p {
            font-size: .9rem;
            color: #5f6368;
        }

    .form-floating > .form-control {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        transition: all .2s ease;
    }

        .form-floating > .form-control:focus {
            border-color: var(--register-main);
            box-shadow: 0 0 0 3px rgba(25,135,84,.18);
        }

    .btn-register {
        padding: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        background-color: var(--register-main);
        border: none;
        transition: all .2s ease;
    }

        .btn-register:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(25,135,84,.35);
            background-color: var(--register-main-dark);
        }

        .btn-register:disabled {
            opacity: 0.55;
            cursor: not-allowed;
        }

    .toggle-password {
        border: none;
        background: transparent;
        color: #6c757d;
        cursor: pointer;
        transition: .2s;
    }

        .toggle-password:hover {
            color: var(--register-main);
        }

    .register-links {
        text-align: center;
        margin-top: 1.2rem;
    }

        .register-links a {
            color: var(--register-main);
            font-weight: 500;
        }

            .register-links a:hover {
                text-decoration: underline;
                color: var(--register-main-dark);
            }

    .pwd-strength, .pwd-match {
        font-size: 0.88rem;
        font-weight: 600;
    }

    @@media (max-width: 576px) {
        .register-card .card-body {
            padding: 1.5rem;
        }
    }
</style>


<div class="register-container">
    <div class="col-md-6 col-lg-5 px-3">

        <!-- Alerts -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm">
                <i class="fa fa-circle-exclamation me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm">
                <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card register-card">
            <div class="card-body">

                <div class="register-header">
                    <h4><i class="fa fa-user-plus me-2"></i>Tạo tài khoản mới</h4>
                    <p>Điền thông tin để bắt đầu hành trình học lái xe.</p>
                </div>

                <form asp-controller="Auth" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Username -->
                    <div class="form-floating mb-3">
                        <input class="form-control" name="username" required placeholder="Tên đăng nhập" />
                        <label>Tên đăng nhập</label>
                    </div>

                    <!-- Email -->
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" name="email" required placeholder="Email" />
                        <label>Email</label>
                    </div>

                    <!-- Fullname -->
                    <div class="form-floating mb-3">
                        <input class="form-control" name="tenDayDu" required placeholder="Họ và tên" />
                        <label>Họ và tên</label>
                    </div>

                    <!-- Password -->
                    <div class="form-floating mb-3 position-relative">
                        <input id="password" type="password" class="form-control" name="password" required placeholder="Mật khẩu" />
                        <label>Mật khẩu</label>

                        <button type="button"
                                class="toggle-password position-absolute top-50 end-0 translate-middle-y me-3"
                                onclick="togglePassword('password','iconPwd1')">
                            <i id="iconPwd1" class="fa fa-eye"></i>
                        </button>
                    </div>

                    <div id="pwdStrength" class="pwd-strength mb-2"></div>

                    <!-- Confirm Password -->
                    <div class="form-floating mb-3 position-relative">
                        <input id="confirmPassword"
                               name="confirmPassword"
                               type="password"
                               class="form-control"
                               required
                               placeholder="Nhập lại mật khẩu" />
                        <label>Nhập lại mật khẩu</label>

                        <button type="button"
                                class="toggle-password position-absolute top-50 end-0 translate-middle-y me-3"
                                onclick="togglePassword('confirmPassword','iconPwd2')">
                            <i id="iconPwd2" class="fa fa-eye"></i>
                        </button>
                    </div>

                    <div id="pwdMatch" class="pwd-match mb-3"></div>

                    <button id="btnSubmit" type="submit" class="btn-register w-100" disabled>
                        <i class="fa fa-user-check me-2"></i>Tạo tài khoản
                    </button>

                    <div class="register-links mt-3">
                        <span>Đã có tài khoản?</span>
                        <a asp-action="Login">Đăng nhập</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);

            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }

        const pwd = document.getElementById("password");
        const confirmPwd = document.getElementById("confirmPassword");
        const strength = document.getElementById("pwdStrength");
        const match = document.getElementById("pwdMatch");
        const submit = document.getElementById("btnSubmit");

        pwd.addEventListener("input", validate);
        confirmPwd.addEventListener("input", validate);

        function validate() {
            const p = pwd.value;
            const c = confirmPwd.value;

            // Strength
            let text = "Yếu", color = "red";
            if (p.length >= 8) { text = "Trung bình"; color = "orange"; }
            if (p.match(/[A-Z]/) && p.match(/[0-9]/) && p.match(/[^a-zA-Z0-9]/)) { text = "Mạnh"; color = "green"; }

            strength.innerHTML = `Độ mạnh mật khẩu: <span style="color:${color}">${text}</span>`;

            // Match
            if (c.length > 0) {
                if (c === p) {
                    match.innerHTML = "<span style='color:green'>✔ Mật khẩu khớp</span>";
                } else {
                    match.innerHTML = "<span style='color:red'>✘ Mật khẩu không khớp</span>";
                }
            } else match.innerHTML = "";

            // Enable submit
            submit.disabled = !(p.length >= 6 && p === c);
        }
    </script>
}

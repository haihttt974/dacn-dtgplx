@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <div class="text-center mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-warning-subtle"
                         style="width:64px;height:64px;">
                        <i class="fa fa-unlock-keyhole text-warning" style="font-size: 28px;"></i>
                    </div>
                </div>

                <h4 class="text-center mb-2 fw-bold text-warning">
                    Khôi phục mật khẩu
                </h4>
                <p class="text-center text-muted mb-4 small">
                    Nhập <strong>email đã đăng ký</strong>, hệ thống sẽ gửi mã OTP để bạn đặt lại mật khẩu.
                </p>

                <form asp-action="SendOtp" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        <input name="email"
                               type="email"
                               class="form-control"
                               required
                               placeholder="Email" />
                        <label>Email đăng ký</label>
                    </div>

                    <button class="btn btn-warning w-100 fw-semibold text-white">
                        <i class="fa fa-paper-plane me-1"></i> Gửi mã OTP
                    </button>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Login" class="text-decoration-none">
                        <i class="fa fa-arrow-left me-1"></i>Quay lại đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">

        <!-- Alerts -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm">
                <i class="fa fa-circle-exclamation me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show shadow-sm">
                <i class="fa fa-info-circle me-2"></i>@TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">

                <h4 class="text-center mb-4 fw-bold text-warning">
                    <i class="fa fa-unlock-keyhole me-2"></i>Quên mật khẩu
                </h4>

                <p class="text-muted small text-center mb-3">
                    Nhập email đăng ký để nhận mật khẩu mới.
                </p>

                <form asp-controller="Auth" asp-action="ForgotPassword" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        <input name="email" type="email" class="form-control" placeholder="Email đăng ký" required />
                        <label>Email đăng ký</label>
                    </div>

                    <button type="submit" class="btn btn-warning w-100 fw-semibold py-2">
                        <i class="fa fa-paper-plane me-2"></i>Gửi yêu cầu
                    </button>

                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="fa fa-arrow-left me-1"></i>Quay lại đăng nhập
                        </a>
                    </div>
                </form>

            </div>
        </div>

        <p class="text-muted mt-3 small text-center">
            (Hệ thống sẽ gửi mật khẩu mới qua email của bạn.)
        </p>
    </div>
</div>

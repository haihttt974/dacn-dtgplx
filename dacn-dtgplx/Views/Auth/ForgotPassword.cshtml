@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";
}

<h2 class="mb-4">Quên mật khẩu</h2>

<form asp-controller="Auth" asp-action="ForgotPassword" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Email đăng ký</label>
        <input name="email" type="email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Gửi yêu cầu</button>
    <a asp-controller="Auth" asp-action="Login" class="btn btn-link">Quay lại đăng nhập</a>
</form>

<p class="text-muted mt-3">
    (Bản demo sẽ in token reset ra Console Output.)
</p>
